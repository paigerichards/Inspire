  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :bibliography %>
    <%= f.text_area :bibliography  %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.text_area :genre %>
  </div>

  <div class="field">
    <%= f.label :excerpt %>
    <%= f.text_area :excerpt %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.datetime_select :date %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
