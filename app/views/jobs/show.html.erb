<p id="notice"><%= notice %></p>

<div class="job-show">
    <h2><%= @job.title %></h2>
    <em>
      <% if @job.company.empty? %>
      <%= @job.user %>
    <% else %>
      <%= @job.company %>
    <%end%>
  </em>
    <h3>Description:</h3>
    <p><%= @job.description %></p>
    <strong><%= @job.experience_level %></strong>
    <em><%= @job.date %></em>

  <div class="links">
    <% if user_signed_in? %>
      <% if @job.user == current_user%>
        <%= link_to 'Edit', edit_job_path(job) %>
        <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%else%>
        <% link_to 'Back', jobs_path%>
      <%end%>
    <%end%>

  </div>
</div>
